    <select id="findUserOrganization" resultMap="userOrganizationMap" parameterType="java.lang.Long">
        select
        u.id, u.username, u.email,
        u.mobile, u.password,
        u.salt, u.status, u.admin,
        u.create_time, u.modify_time,
        u.login_time, u.first_login_time,
        u.last_login_time,
        organ.id as organization_id,
        organ.name as organ_name,
        organ.user_count ,
        organ.trade_code_id,
        organ.url,
        organ.address,
        organ.status as organ_status
        from sys_user as u
        left join sys_user_organization_job as uoj on u.id = uoj.user_id
        left join sys_organization as organ on uoj.organization_id = organ.id
        where u.id = #{id,jdbcType=BIGINT}
    </select>

